{
  "name": "autobot-mvp",
  "version": "1.0.0",
  "description": "Automated FOIA request system with AI-powered generation, email tracking, and follow-ups",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrate.js",
    "test-setup": "node test-setup.js",
    "postinstall": "playwright install chromium --with-deps || echo 'Playwright install failed, continuing...'",
    "test": "mocha --recursive tests/",
    "test:chaos": "mocha tests/chaos/reliability.test.js --timeout 30000",
    "test:golden": "mocha tests/golden-cases/golden.test.js --timeout 60000",
    "test:golden:update": "mocha tests/golden-cases/golden.test.js --timeout 60000 -- --update-snapshots",
    "test:load": "node tests/load/staging-load-test.js",
    "test:prompts": "node scripts/test-prompt-suite.js",
    "test:prompts:verbose": "node scripts/test-prompt-suite.js --verbose",
    "test:prompts:dry": "node scripts/test-prompt-suite.js --dry-run",
    "test:e2e:prompts": "node tests/e2e/api-prompt-e2e.test.js",
    "test:prod-ready": "node tests/e2e/production-readiness.test.js",
    "test:prod-ready:full": "node tests/e2e/production-readiness.test.js --full",
    "test:contract": "node tests/e2e/production-readiness.test.js --category=contract",
    "test:orchestration": "node tests/e2e/production-readiness.test.js --category=orchestration",
    "test:idempotency": "node tests/e2e/production-readiness.test.js --category=idempotency",
    "test:golden:runner": "node tests/golden-runner.js",
    "verify:migrations": "node scripts/verify-migrations.js",
    "dashboard": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "dashboard:install": "cd dashboard && npm install"
  },
  "keywords": [
    "foia",
    "automation",
    "email",
    "ai",
    "notion"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@hyperbrowser/sdk": "^0.74.0",
    "@langchain/core": "^1.1.15",
    "@langchain/langgraph": "^1.1.0",
    "@langchain/langgraph-checkpoint-postgres": "^1.0.0",
    "@langchain/langgraph-checkpoint-redis": "^1.0.1",
    "@langchain/openai": "^1.2.2",
    "@notionhq/client": "^2.2.14",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.5",
    "bullmq": "^4.15.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "openai": "^4.24.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "playwright": "^1.40.0",
    "playwright-chromium": "^1.40.0",
    "playwright-core": "^1.56.1",
    "redis": "^5.10.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "sinon": "^17.0.1",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
